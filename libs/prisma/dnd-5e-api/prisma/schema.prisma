// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
	output = "./dist/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum School {
  Abjuration
  Evocation
  Illusion
  Divination
  Transmutation
  Necromancy
  Conjuration
  Enchantment
}

enum Level {
	Cantrip
	First
	Second
	Third
	Fourth
	Fifth
Sixth
	Seventh
	Eighth
	Ninth
}

model Spell {
  id Int @id @default(autoincrement())
	name String @unique
	level Level
	school School
	text String @db.Text()
	atHigherLevels String? @db.Text()
	verbal Boolean
	somatic Boolean
	material Boolean
	cost String?
	concentration Boolean
	ritual Boolean
}
