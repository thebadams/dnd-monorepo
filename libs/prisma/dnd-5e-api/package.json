{
  "name": "@dnd-5e-api/prisma",
  "version": "1.0.0",
  "description": "Prisma client definitions for the dnd-5e-api",
  "main": "dist/index.js",
	"types": "dist/index.d.ts",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "prisma": "^3.12.0",
		"typescript": "4.6.3"
  },
  "scripts": {
    "build": "prisma generate && tsc -p tsconfig.json",
		"format": "prisma format",
		"migrate": "prisma migrate dev",
		"start": "sudo docker-compose start",
		"seed": "ts-node prisma/seed.ts"
  },
	"nx": {
		"targets": {
			"migrate": {
				"outputs": ["./prisma/migrations/*", "../../../../node_modules/.prisma/dnd-5e-api/client/"],
				"dependsOn": [{
					"target": "start",
					"projects": "self"
				}]
						}
		}
	},
  "dependencies": {
    "@prisma/client": "^3.12.0",
		"@thebadams/5e-srd-sdk": "workspace: *",
		"axios": "0.26.1"
  }
}
