generator client {
  provider = "prisma-client-js"
	output = "../../../../node_modules/@prisma/dnd-5e-api/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum School {
	Abjuration
	Evocation
	Illusion
	Necromancy
	Transmutation
	Divination
	Enchantment
	Conjuration
}

model Spell {
	id Int @id @default(autoincrement())
	name String
	school School
	level Int
	atHigherLevel String?
	text String
	verbal Boolean
	somatic Boolean
	material Boolean
	cost String?
	
	
}